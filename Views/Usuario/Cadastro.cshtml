@model Usuarios
@{
  ViewData["Title"] = "Login";
}

<body>
  <div class="container">
    <div class="logo-wapper">
      <img src="../image/logo.png" alt="">
    </div>
    <div class="text-header">
      <h1>
        Iniciativa <strong>Vida saudavel</strong>
      </h1>
    </div>
    <div class="formulario-container">
      <div class="form-full">
        <strong class="title">Cadastro de usuario</strong>
        <form class="form" asp-action="CadastrarUsuario" method="POST">
          <input type="text" asp-for="Login" id="" placeholder="Login ou Nome" required>
          <input type="password" asp-for="Senha" id="userSenha" placeholder="Senha" required>
          <button
            type="submit">
            Entrar
          </button>
        </form>
      </div>
    </div>


    <img src="../image/blur-background.png" />
  </div>
</body>